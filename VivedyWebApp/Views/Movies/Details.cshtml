@model VivedyWebApp.Models.Movie

@{
    ViewBag.Title = "Details";
}

<div class="jumbotron">
     @if (ViewBag.ErrorMessage != null && ViewBag.ErrorMessage != "")
    {
        <h2 class="text-danger text-center">@ViewBag.ErrorMessage</h2>
    }
    <div class="row">
        <div class="col-lg-5">
            <div class="card">
                <iframe style="min-height: 400px;" src="@Model.TrailerUrl"
                        title="YouTube video player" frameborder="0" allowfullscreen></iframe>
                <!--Add [?autoplay=1&mute=1] to the end of the link for it to auto play and on mute-->
            </div>
        </div>
        <div class="col-lg-7">
            <div class="card">
                <div class="card-body">
                    <h5 style="color: #A80000;" class="display-2">@Model.Name</h5>
                    <p class="card-text"> Catoegry: <span class="badge badge-pill badge-secondary">@Model.Category</span></p>
                    <p class="card-text"> Rating: <span class="badge badge-pill badge-danger"> +@Model.Rating</span></p>
                    <p class="card-text">
                        Movie Duration: <span class="badge badge-pill badge-danger">
                            @Model.Duration.Hours hr
                            @Model.Duration.Minutes min
                        </span>
                    </p>
                    <p class="card-text">@Model.Description</p>
                    <p class="Price"> <span style="color: #A80000;">Movie Price: </span>$@Model.Price</p>
                    <a href="/Movies/BookingTime?id=@Model.MovieId" class="btn btn-danger">Book Movie</a>
                </div>
            </div>
        </div>
    </div>
</div>
