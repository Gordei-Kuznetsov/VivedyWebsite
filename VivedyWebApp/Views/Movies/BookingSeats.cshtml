@model VivedyWebApp.Models.MoviesBookingSeatsViewModel

@{
    ViewBag.Title = "Booking Seats";
}

@using (Html.BeginForm("BookingSeats", "Movies", FormMethod.Post, htmlAttributes: new { role = "form", id="seatsForm", onsubmit="return validateTheForm()" }))
{
    @Html.AntiForgeryToken()

    <div class="jumbotron">
        <div class="row text-center">
            <div class="col-lg-9 col-sm-12 ">
                <div class=" text-center mb-5">
                    <!--
    <div class="card-header">
        <ul class="nav nav-pills card-header-pills">
            <li class="nav-item">
                <div class="nav-link">Time</div>
            </li>
            <li class="nav-item">
                <div class="btn btn-danger" disabled>Seats</div>
            </li>
            <li class="nav-item">
                <div class="nav-link">Payment</div>
            </li>

        </ul>
    </div>
        -->
                    <div class="card-body align-self-center">
                        <h5 class="phenomena-sm-two">Seats</h5>
                        <hr style="width:40%" />
                        <div class="progress">
                            <div class="progress-bar bg-danger" role="progressbar" style="width: 66%;" aria-valuemin="0" aria-valuemax="100">66% Seats</div>
                        </div>
                        <hr style="width:40%" />
                        <p class="card-text">Select your seats</p>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @for (int row = 0; row < 5; row++)
                        {
                            int min = 12 * row + 1;
                            int max = min + 11;
                            <div class="row ">
                                @for (int s = min; s <= max; s++)
                                {
                                    if (Model.OccupiedSeats != null && Model.OccupiedSeats.Contains(s))
                                    {
                                        <div class="col-lg-1 col-md-2 col-sm-4 col-6">
                                            <div id="occupied_@s" disabled="true" class="btn btn-warning SeatButton m-2" style="width: 100%; min-width:3rem; max-width:5rem;">@s</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-lg-1 col-md-2 col-sm-4 col-6">
                                            <div class="btn btn-danger SeatButton m-2" style="width: 100%; min-width:3rem; max-width:5rem;">@s</div>
                                        </div>
                                    }
                                }
                            </div>
                        }
                        <!--
                            <div class="row">
                                <div class="gray-box">
                                    <p class="seatNumber">1</p>
                                </div>
                                <div class="gray-box">
                                    <p class="seatNumber">2</p>
                                </div>
                                <div class="gray-box">
                                    <p class="seatNumber">3</p>
                                </div>
                                <div class="gray-box">
                                    <p class="seatNumber">4</p>
                                </div>
                                <div class="gray-box">
                                    <p class="seatNumber">5</p>
                                </div>
                                <div class="gray-box">
                                    <p class="seatNumber">6</p>
                                </div>
                                <div class="gray-box">
                                    <p class="seatNumber">7</p>
                                </div>
                                <div class="gray-box">
                                    <p class="seatNumber">8</p>
                                </div>
                                <div class="gray-box-select">
                                    <p class="seatNumber">9</p>
                                </div>
                                <div class="gray-box-taken">
                                    <p class="seatNumber">10</p>
                                </div>
                            </div>
        -->
                        @Html.HiddenFor(m => m.SelectedSeats)
                        @Html.ValidationMessageFor(m => m.SelectedSeats, "", new { @class = "text-danger", id = "ValMessageSpanForSeats" })
                        @Html.HiddenFor(m => m.SelectedRotationId)
                        <div class="align-self-center">
                            <div class="row text-center mt-4">
                                <div class="col-12">
                                    <div class=" phenomena-sm ">
                                        <input type="submit" value="Submit" class="btn btn-danger pl-4 pr-4 pb-2 pt-2 phenomena-sm ">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-12">
                <div class="card mb-5">
                    <img src="~/Content/Images/@Model.Movie.MovieId-VerticalPoster.png" class="card-img-top" alt="Movie Poster">
                    <div class="card-body">
                        <hr />
                        <h5 class="phenomena-sm-two mt-4 text-center">@Model.Movie.Name</h5>
                        <hr />
                        <div class="p-2 phenomena-sm"> Catoegry: <span class="badge badge-pill badge-secondary">@Model.Movie.Category</span></div>
                        <div class="p-2 phenomena-sm"> Rating: <span class="badge badge-pill badge-danger"> +@Model.Movie.Rating</span></div>
                        <div class="p-2 phenomena-sm">
                            Movie Duration: <span class="badge badge-pill badge-danger">
                                @Model.Movie.Duration.Hours hr
                                @Model.Movie.Duration.Minutes min
                            </span>
                        </div>
                        <hr />
                        <p class="card-text">@Model.Movie.Description</p>
                        <div class="phenomena-sm-two"> Movie Price: <span style="color:white"> $@Model.Movie.Price </span></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        window.onload = function () {
            let seats = document.getElementsByClassName("SeatButton");
            for (let i = 0; i < seats.length; i++) {
                if (seats[i].id.includes("occupied")) {
                    seats[i].occupied = true;
                    seats[i].selected = false;
                }
                else {
                    seats[i].occupied = false;
                    seats[i].selected = false;
                    seats[i].onclick = selectedChange;
                }
            }
        }
        function selectedChange() {
            if (!this.occupied) {
                if (this.selected) {
                    this.selected = false;
                    this.classList.remove("btn-primary");
                    this.classList.add("btn-danger");
                    let seats = document.getElementById("SelectedSeats");
                    seats.value = seats.value.replace(this.textContent + ",", "");
                }
                else {
                    this.selected = true;
                    this.classList.remove("btn-danger");
                    this.classList.add("primary");
                    document.getElementById("SelectedSeats").value += this.textContent + ",";
                }
            }
        }
        function validateTheForm() {
            if (document.getElementById("SelectedSeats").value == "") {
                event.preventDefault();
                document.getElementById("ValMessageSpanForSeats").textContent = "Please select a seat";
                return false;
            }
            else {
                return true;
            }
        }
    </script>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
