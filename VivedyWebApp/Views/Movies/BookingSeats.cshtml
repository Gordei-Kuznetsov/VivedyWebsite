@model VivedyWebApp.Models.MoviesBookingSeatsViewModel

@{
    ViewBag.Title = "Booking Seats";
}

@using (Html.BeginForm("BookingSeats", "Movies", FormMethod.Post, htmlAttributes: new { role = "form", id = "SeatsForm" }))
{
    @Html.AntiForgeryToken()

    <div class="jumbotron">
        <div class="row text-center">
            <div class="col-lg-9 col-sm-12 ">
                <div class="card text-center mb-5">
                    <div class="card-header">
                        <ul class="nav nav-pills card-header-pills">
                            <li class="nav-item">
                                <div class="nav-link">Time</div>
                            </li>
                            <li class="nav-item">
                                <div class="btn btn-danger" disabled>Seats</div>
                            </li>
                            <li class="nav-item">
                                <div class="nav-link">Payment</div>
                            </li>

                        </ul>
                    </div>
                    <div class="card-body align-self-center">
                        <h5 class="card-title">Seats</h5>
                        <p class="card-text">Select your seats</p>
                        @for (int row = 0; row < 5; row++)
                        {
                            int min = 12 * row + 1;
                            int max = min + 11;
                            <div class="row mt-5 ">
                                @for (int s = min; s <= max; s++)
                                {
                                    if (Model.OccupiedSeats != null && Model.OccupiedSeats.Contains(s))
                                    {
                                        <div class="col-1">
                                            <div style="width: 100%;" occupied="true" disabled="true" class="btn btn-warning SeatButton">@s</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-1">
                                            <div style="width: 100%;" class="btn btn-danger SeatButton">@s</div>
                                        </div>
                                    }
                                }
                            </div>
                        }
                        @Html.HiddenFor(m => m.SelectedSeats)
                        @Html.ValidationMessageFor(m => m.SelectedSeats, "", new { @class = "text-danger" })
                        @Html.HiddenFor(m => m.SelectedRotationId)
                        <div class="align-self-center">
                            <div class="row text-center mt-4">
                                <div class="col-12">
                                    <div class=" phenomena-sm ">
                                        <input type="submit" value="Submit" class="btn btn-danger pl-4 pr-4 pb-2 pt-2 phenomena-sm ">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-12">
                <div class="card mb-5">
                    <img src="~/Content/Images/@Model.Movie.MovieId-VerticalPoster.png" class="card-img-top" alt="Movie Poster">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Movie.Name</h5>
                        <p class="card-text"> Catoegry: <span class="badge badge-pill badge-secondary">@Model.Movie.Category</span></p>
                        <p class="card-text"> Rating: <span class="badge badge-pill badge-danger"> +@Model.Movie.Rating</span></p>
                        <p class="card-text">
                            Movie Duration: <span class="badge badge-pill badge-danger">
                                @Model.Movie.Duration.Hours hr
                                @Model.Movie.Duration.Minutes min
                            </span>
                        </p>
                        <p class="card-text">@Model.Movie.Description</p>
                        <p class="Price"> <span style="color: #A80000;">Movie Price: </span>$@Model.Movie.Price</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        window.onload = function () {
            let seats = document.getElementsByClassName("SeatButton");
            for (let i = 0; i < seats.length; i++) {
                seats[i].selected = false;
                seats[i].onclick = selectedChange;
            }
        }
        function selectedChange() {
            if (!this.occupied) {
                if (this.selected) {
                    this.selected = false;
                    this.classList.remove("btn-primary");
                    this.classList.add("btn-danger");
                    let seats = document.getElementById("SelectedSeats");
                    seats.value = seats.value.replace(this.textContent + ",", "");
                }
                else {
                    this.selected = true;
                    this.classList.remove("btn-danger");
                    this.classList.add("primary");
                    document.getElementById("SelectedSeats").value += this.textContent + ",";
                }
            }
        }
    </script>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
