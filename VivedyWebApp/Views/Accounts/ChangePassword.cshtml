@model VivedyWebApp.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
}


@using (Html.BeginForm("ChangePassword", "Accounts", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
<form>
    <div class="containerOne">
        <div class="grey-bg-color">
            <div class="mb-5 mt-4 phenomena-sm border-bottom ">
                <h1 class="display-5">Change Your Password</h1>
            </div>
            <h5 class="text-center">Please, login again after changing your password.</h5>
            <br />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="row">
                @Html.LabelFor(m => m.OldPassword, new { @class = "col-sm-12 phenomena-sm" })
                @Html.PasswordFor(m => m.OldPassword, new { @class = "mb-3 col-sm-12" })
                @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
            </div>
            <div class="row">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-12 phenomena-sm" })
                @Html.PasswordFor(m => m.NewPassword, new { @class = "mb-3 col-sm-12" })
                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
            </div>
            <div class="row">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-12 phenomena-sm" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "mb-3 col-sm-12" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
            <div class="row text-center">
                <div class="col-12">
                    <input type="submit" value="Change password" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</form>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}