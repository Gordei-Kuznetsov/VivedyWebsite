@model VivedyWebApp.Models.ChangeEmailViewModel
@{
    ViewBag.Title = "ChangeEmail";
}
@using (Html.BeginForm("ChangeEmail", "Accounts", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
<form>
    <div class="containerOne">
        <div class="grey-bg-color">
            <div class="mb-5 mt-4 phenomena-sm border-bottom ">
                <h1 class="display-5">CHANGE YOUR EMAIL</h1>
            </div>
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="row">
                @Html.LabelFor(m => m.OldEmail, new { @class = "col-sm-12" })
                @Html.EditorFor(m => m.OldEmail, new { @class = "mb-3 col-sm-12" })
                @Html.ValidationMessageFor(m => m.OldEmail, "", new { @class = "text-danger" })
            </div>
            <div class="row">
                @Html.LabelFor(m => m.NewEmail, new { @class = "col-sm-12" })
                @Html.EditorFor(m => m.NewEmail, new { @class = "mb-3 col-sm-12" })
                @Html.ValidationMessageFor(m => m.NewEmail, "", new { @class = "text-danger" })
            </div>
            <div class="row">
                @Html.LabelFor(m => m.ConfirmEmail, new { @class = "col-sm-12" })
                @Html.EditorFor(m => m.ConfirmEmail, new { @class = "mb-3 col-sm-12" })
                @Html.ValidationMessageFor(m => m.ConfirmEmail, "", new { @class = "text-danger" })
            </div>
            <div class="row text-center">
                <div class="col-12">
                    <input type="submit" value="Change email" class="btn btn-primary" />
                </div>
                <h5>Please, login again after changing your email.</h5>
            </div>
        </div>
    </div>
</form>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}