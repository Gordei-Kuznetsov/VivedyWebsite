@model VivedyWebApp.Models.ChangeEmailViewModel
@{
    ViewBag.Title = "ChangeEmail";
}

<h2>Change Email</h2>

@using (Html.BeginForm("ChangeEmail", "Accounts", FormMethod.Post, new { @class = "form-horizontal jumbotron", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Email</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.OldEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.OldEmail, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.NewEmail, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.ConfirmEmail, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change email" class="btn btn-default" />
        </div>
    </div>
}
<h3>After updating email, you will be logged off. To log in again, you need to confirm your new email address.</h3>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
