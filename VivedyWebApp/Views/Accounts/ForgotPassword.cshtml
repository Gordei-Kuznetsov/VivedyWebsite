@model VivedyWebApp.Models.ForgotPasswordViewModel

@{
    ViewBag.Title = "Forgot Passowrd";
}


@using (Html.BeginForm("ForgotPassword", "Accounts", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
<form>
    <div class="containerOne">
        <div class="grey-bg-color">
            <div class="mb-5 mt-4 phenomena-sm border-bottom ">
                <h1 class="display-5">Forgot Password</h1>
            </div>
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="row">
                @Html.LabelFor(m => m.Email, new { @class = "col-sm-12 phenomena-sm" })
                @Html.TextBoxFor(m => m.Email, new { @class = "mb-3 col-sm-12" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="row">
                <div class="col-12 text-center">
                    <input type="submit" value="Send code" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</form>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}