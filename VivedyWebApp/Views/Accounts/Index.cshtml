@model VivedyWebApp.Models.ViewModels.IndexViewModel

@{
    ViewBag.Title = "My Account";
}

<h2>Manage my account</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>

    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>User Name:</dt>
        <dd>@Model.Name</dd>
        <dt>Phone Number:</dt>
        <dd>@Model.PhoneNumber</dd>
        <dt>Password:</dt>
        <dd>
            @Html.ActionLink("Change your password", "ChangePassword")
        </dd>
        <dt>Email:</dt>
        <dd>@Model.Email</dd>
        @Html.ActionLink("Change your email", "ChangeEmail")
    </dl>
</div>

<div class="card-body ">
    <form>
        <div class="row">
            <div class="col-md-1 col-sm-12 phenomena-sm">User Name :</div>
            <input type="text" class="mb-3 col-md-9 col-sm-12">
        </div>
        <div class="row">
            <div class="col-md-1 col-sm-12 phenomena-sm">First Name :</div>
            <input type="text" class="mb-3 col-md-9 col-sm-12">
            @Html.ActionLink("Change your password", "ChangePassword")
        </div>
        <div class="row">
            <div class="col-md-1 col-sm-12 phenomena-sm">Last Name :</div>
            <input type="text" class="mb-3 col-md-9 col-sm-12">
        </div>


        <div class="row">
            <div class="col-md-1 col-sm-12 phenomena-sm">Contact Number :</div>
            <input type="text" class="mb-3 col-md-9 col-sm-12">
        </div>
        <div class="row mb-3">
            <form action="/action_page.php">
                <label class="col-md-1 col-sm-12 phenomena-sm" for="birthday">
                    Date of Birth
                    :
                </label>
                <input type="date" id="birthday" name="birthday">
            </form>
        </div>

    </form>

</div>