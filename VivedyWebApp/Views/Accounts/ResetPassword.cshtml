@model VivedyWebApp.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

@using (Html.BeginForm("ResetPasswordConfirmation", "Accounts", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="containerOne" style="max-width: 40rem;">
        <div class="grey-bg-color">
            <div class="mb-5 mt-4 phenomena-sm border-bottom ">
                <h1 class="display-5 text-center">Reset Password</h1>
            </div>
            <div class="border-bottom text-center align-self-center">
                <div class="row">
                    <div class="col-3">
                        @Html.LabelFor(m => m.Email, new { @class = "phenomena-sm" })
                    </div>
                    <div class="col-9">
                        @Html.TextBoxFor(m => m.Email, new { style = "width:100%", @class = "mb-3" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        @Html.LabelFor(m => m.Password, new { @class = "phenomena-sm" })
                    </div>
                    <div class="col-9">
                        @Html.TextBoxFor(m => m.Password, new { style = "width:100%", @class = "mb-3" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row mb-5">
                    <div class="col-3">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "phenomena-sm" })
                    </div>
                    <div class="col-9">
                        @Html.TextBoxFor(m => m.ConfirmPassword, new { style = "width:100%", @class = "mb-3" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="align-self-center">
                <div class="row text-center mt-4">
                    <div class="col-12">
                        <div class=" phenomena-sm ">
                            <input type="submit" value="Reset Password" class="btn btn-danger pl-4 pr-4 pb-2 pt-2 phenomena-sm ">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
