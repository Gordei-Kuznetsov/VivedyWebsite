@model VivedyWebApp.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Accounts", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="containerOne" style="width: 40rem;">
        <div class="grey-bg-color">
            <div class="mb-5 mt-4 phenomena-sm border-bottom ">
                <h1 class="display-5 text-center">REGISTER NEW ACCOUNT</h1>
            </div>
            <div class="border-bottom text-center align-self-center">
                <div class="row ">
                    <div class="col-3">
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @Html.LabelFor(m => m.Name, new { @class = "phenomena-sm" })
                    </div>
                    <div class="col-9">
                        @Html.TextBoxFor(m => m.Name, new { style = "width:100%", @class = "mb-3" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        @Html.LabelFor(m => m.Email, new { @class = "phenomena-sm" })
                    </div>
                    <div class="col-9">
                        @Html.TextBoxFor(m => m.Email, new { style = "width:100%", @class = "mb-3" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        @Html.LabelFor(m => m.Password, new { @class = "phenomena-sm" })
                    </div>
                    <div class="col-9">
                        @Html.TextBoxFor(m => m.Password, new { style = "width:100%", @class = "mb-3" })
                    </div>
                </div>
                <div class="row mb-5">
                    <div class="col-3">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "phenomena-sm" })
                    </div>
                    <div class="col-9">
                        @Html.TextBoxFor(m => m.ConfirmPassword, new { style = "width:100%", @class = "mb-3" })
                    </div>
                </div>
                <div class="row phenomena-sm mb-4 ">
                    <label class="form-check-label  mt-2 col-12" for="flexCheckDefault">
                        <input class="form-check-label" type="checkbox" value="" id="flexCheckDefault">
                        I would like to recieve offers from VIVEDY.
                    </label>
                    <label class="form-check-label col-12" for="flexCheckDefault">
                        <input class="form-check-label" type="checkbox" value="" id="flexCheckDefault" required>
                        I have read and agreed to the <a href="/Home/Privacy" class="text-link"><u>Terms & agreement</u></a>
                        and <a href="/Home/Privacy" class="text-link"><u>Privacy Policy</u></a>
                    </label>
                </div>
            </div>
            <div class="align-self-center">
                <div class="row text-center mt-4">
                    <div class="col-12">
                        <div class=" phenomena-sm ">
                            <input type="submit" value="Register" class="btn btn-danger pl-4 pr-4 pb-2 pt-2 phenomena-sm ">
                        </div>
                    </div>
                </div>
                <div class="row text-center">
                    <div class="col-12">
                        <div class="phenomena-sm mt-3">
                            <div class="text-light">
                                Already have an account? <a href="/Accounts/Login" class="text-link"><u>Log In</u></a>
                            </div>
                            <a href="/Accounts/ForgotPassword" class="text-link"><u>I forgot my Password</u></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


