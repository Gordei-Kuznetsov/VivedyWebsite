                    </div>
                </div>
                
            </div>


            <div class="row">
                <div class="form-check phenomena-sm col-8">
                    <button type="button" class="btn btn-danger pl-5 pr-5 pt-2 pb-2 mt-3 phenomena-sm " value="Save">Save  <i class="far fa-save"></i></button>
                </div>
            </div>
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}

