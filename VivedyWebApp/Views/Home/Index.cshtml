@model VivedyWebApp.Models.ViewModels.MoviesHomeViewModel
@{
    ViewBag.Title = "Home";
}

<main>
    <div class="containerOne" style="height:100vh;">
        <div class="card-body">
            <div class="card-body">
                <h1 style="color: #a80000;" class=" phenomena2">VIVEDY</h1>
                <!--<hr class="my-4">-->
                <p class="ml-3 mb-4">Welcome to Vivedy cinemas, pick a movie here</p>
                <a href="/Movies/Index" class="btn btn-danger ml-3 pl-4 pr-4 pb-2 pt-2">MOVIES <i class="fas fa-film"></i></a>
            </div>
        </div>
    </div>
    <div class="jumbotron-fluid" style="margin-left: 2rem; margin-right: 2rem;">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @for (int count = 0; count < Model.TopMovies.Count(); count++)
                {
                    if (count == 0)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@count" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@count"></li>
                    }
                }
            </ol>
            <div class="carousel-inner">
                @foreach (var item in Model.TopMovies)
                {
                    if (item == Model.TopMovies.First())
                    {
                        <div class="carousel-item active">
                            <img style="height:auto" class="d-block w-100" src="/Content/Images/@item.Id-HorizontalPoster.png" alt="Slide Failed">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img style="height: auto;" class="d-block w-100" src="/Content/Images/@item.Id-HorizontalPoster.png" alt="Slide Failed">
                        </div>
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="container">
                    <h1 style="color: #a80000;" class="display-1 phenomena-sm-three mb-5 text-center">COMMING SOON</h1>
                    <hr class="" style="width: 40vh;">
                </div>
            </div>
            <div class="row mt-5">
                @foreach (var item in Model.ComingSoonMovies)
                {
                    <div class="card-body col-lg-3 col-sm-6 movieCard">
                        <div class="card">
                            <img src="/Content/Images/@item.Id-VerticalPoster.png"
                                 class="card-img-top" style="max-height:20rem; min-height:20rem; object-fit:cover" alt="Failed Img">
                            <div class="card">
                                <a href="/Movies/Details?id=@item.Id" class="btn btn-primary">@item.Name</a>
                            </div>
                        </div>
                        <div style="display: none" class="movieName">@item.Name</div>
                        <div style="display: none" class="movieRating">@item.Rating</div>
                        <div style="display: none" class="movieCategory">@item.Category</div>
                    </div>
                }
            </div>
        </div>
    </div>
</main>




