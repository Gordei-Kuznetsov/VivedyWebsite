@model VivedyWebApp.Models.ViewModels.AdminUsersViewModel

@{
    ViewBag.Title = "Edit User";
}

@using (Html.BeginForm("Edit", "AdminUsers", null, FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()

