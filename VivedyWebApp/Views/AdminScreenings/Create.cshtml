@model VivedyWebApp.Models.ViewModels.AdminScreeningsCreateViewModel

@{
    ViewBag.Title = "Admin | Create Screening";
}

@using (Html.BeginForm("Create", "AdminScreenings", null, FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    
    <div class="containerOneAdmin">
        <div class="white-bg-color mx-auto text-dark " style="max-width: 750px; border: 0.5rem solid #a8000a;">
            <div class="mb-5 mt-4 phenomena-sm border-bottom border-dark " style="color: #a8000a"><h1 class="display-5">ADD SCREENING</h1></div>
            <div class="border-bottom">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-3 phenomena-sm">@Html.LabelFor(model => model.StartTime) :</div>
                    <div class="mb-3 col-md-8 phenomena-sm">
                        @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "col-md-12" } })
                        @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-3 phenomena-sm">@Html.LabelFor(model => model.MovieId) :</div>
                    <div class="mb-3 col-md-8 phenomena-sm">
                        @Html.EditorFor(model => model.MovieId, new { htmlAttributes = new { @class = "col-md-12" } })
                        @Html.ValidationMessageFor(model => model.MovieId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-3 phenomena-sm">@Html.LabelFor(model => model.GenerateScreenings):</div>
                    <div class="mb-3 col-md-8 phenomena-sm">
                        @Html.CheckBoxFor(model => model.GenerateScreenings, new { htmlAttributes = new { @class = "col-md-12" } })
                        @Html.ValidationMessageFor(model => model.GenerateScreenings, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                    <input type="submit" value="Create" class="btn btn-danger pl-5 pr-5 pt-2 pb-2 mt-3 ml-3 phenomena-sm">
            </div>
            <div class="row">
                @Html.ActionLink("Back to List", "Index", "AdminScreenings", routeValues: null, htmlAttributes: new { @class = "mt-3 text-link phenomena-sm ml-5" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
