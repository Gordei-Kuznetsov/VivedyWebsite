@model VivedyWebApp.Models.Booking

@{
    ViewBag.Title = "Edit Booking";
}

@using (Html.BeginForm("Edit", "AdminBookings", null, FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="card mx-auto " style="width: auto; margin-top: 5rem; margin-bottom: 3rem;">
        <div class="white-bg-color mx-auto text-dark " style="width: 750px; border: .5rem solid #a8000a;">
            <div class="mb-5 mt-4 phenomena-sm border-bottom border-dark " style="color: #a8000a"><h1 class="display-5">EDIT BOOKING</h1></div>
            <div class="border-bottom">
                <div class="row">
                    <div class="col-3 phenomena-sm"> @Html.LabelFor(model => model.BookingId) : </div>
                    <div class="mb-3 col-md-8 phenomena-sm" readonly>
                        @Html.DisplayFor(model => model.BookingId, new { htmlAttributes = new { @class = "col-md-12" } })
                    </div>
                </div>
                <div class="row">
                    <div class="col-3 phenomena-sm"> @Html.LabelFor(model => model.CreationDate) : </div>
                    <div class="mb-3 col-md-8 phenomena-sm" readonly>
                        @Html.EditorFor(model => model.CreationDate, new { htmlAttributes = new { @class = "col-md-12" } })
                        @Html.ValidationMessageFor(model => model.CreationDate, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-3 phenomena-sm">@Html.LabelFor(model => model.RotationId) : </div>
                    <div class="mb-3 col-md-8 phenomena-sm">
                        @Html.EditorFor(model => model.RotationId, new { htmlAttributes = new { @class = "col-md-12" } })
                        @Html.ValidationMessageFor(model => model.RotationId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row mb-5">
                    <div class="col-3 phenomena-sm">@Html.LabelFor(model => model.UserEmail) :</div>
                    <div class="mb-3 col-md-8 phenomena-sm">
                        @Html.EditorFor(model => model.UserEmail, new { htmlAttributes = new { @class = "col-md-12" } })
                        @Html.ValidationMessageFor(model => model.UserEmail, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-check phenomena-sm col-8">
                    <input type="submit" class="btn btn-danger pl-5 pr-5 pt-2 pb-2 mt-3 phenomena-sm " value="Save">
                </div>
            </div>
            <div>
                @Html.ActionLink("Back to List", "Index","AdminBookings", routeValues: null, htmlAttributes: new { @class = "text-link phenomena-sm" })
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
