@model VivedyWebApp.Models.Booking

@{
    ViewBag.Title = "Details | Bookings";
}

<div class="containerOneAdmin">
    <div class="white-bg-color mx-auto text-dark "style="max-width: 750px; border: .5rem solid #a8000a;">
        <div class="mb-5 mt-4 phenomena-sm border-bottom border-dark " style="color: #a8000a"><h1 class="display-5">BOOKING DETAILS</h1></div>
        <div class="border-bottom">
            <div class="row">
                <div class="col-3 phenomena-sm">@Html.DisplayNameFor(model => model.ScreeningId) :</div>
                <div class="mb-3 col-md-8 phenomena-sm">
                    @{
                        string scr = Model.Screening.Movie.Name + ", " + Model.Screening.StartDate.ToString("dddd, dd MMMM yyyy") + ", " + Model.Screening.StartTime.ToString(@"hh\:mm");
                        @Html.ActionLink(scr, "Details", "Screenings", routeValues: new { id = Model.ScreeningId }, htmlAttributes: new { @class = "mt-3 text-link phenomena-sm ml-5" })
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-3 phenomena-sm">@Html.DisplayNameFor(model => model.Seats) : </div>
                <div class="mb-3 col-md-8 phenomena-sm">
                    @Html.DisplayFor(model => model.Seats)
                </div>
            </div>
            <div class="row">
                <div class="col-3 phenomena-sm">@Html.DisplayNameFor(model => model.UserEmail) :</div>
                <div class="mb-3 col-md-8 phenomena-sm">
                    @Html.DisplayFor(model => model.UserEmail)
                </div>
            </div>
            <div class="row">
                <div class="col-3 phenomena-sm">@Html.DisplayNameFor(model => model.PayedAmout) :</div>
                <div class="mb-3 col-md-8 phenomena-sm">
                    @Html.DisplayFor(model => model.PayedAmout)
                </div>
            </div>
        </div>
            <div class="row">
                @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger pl-5 pr-5 pt-2 pb-2 mt-3 phenomena-sm " })
            </div>
            <div class="row">
                @Html.ActionLink("Back to List", "Index", routeValues: null, htmlAttributes: new { @class = "mt-3 text-link phenomena-sm ml-5" })
            </div>
        </div>
</div>

