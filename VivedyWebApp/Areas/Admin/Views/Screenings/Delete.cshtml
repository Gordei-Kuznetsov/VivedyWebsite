@model VivedyWebApp.Models.Screening

@{
    ViewBag.Title = "Delete | Screenings";
}

@using (Html.BeginForm("Delete", "Screenings", null, FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()

    <div>
        <div class="containerOneAdmin">
            <div class="white-bg-color mx-auto text-dark " style="max-width: 750px; border: .5rem solid #a8000a;">
                <div class="mb-5 mt-4 phenomena-sm border-bottom border-dark " style="color: #a8000a"><h1 class="display-5">DELETE SCREENING</h1></div>
                <div class="border-bottom">
                    @Html.HiddenFor(model => model.Id)
                    <div class="row">
                        <div class="col-3 phenomena-sm">@Html.DisplayNameFor(model => model.StartDate) : </div>
                        <div class="mb-3 col-md-8 phenomena-sm" readonly>
                            @{
                                string startDate = Model.StartDate.ToString("dddd, dd MMMM yyyy");
                                @Html.DisplayFor(model => startDate)
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3 phenomena-sm">@Html.DisplayNameFor(model => model.StartTime) : </div>
                        <div class="mb-3 col-md-8 phenomena-sm" readonly>
                            @{
                                string startTime = Model.StartTime.ToString(@"hh\:mm");
                                @Html.DisplayFor(model => startTime)
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3 phenomena-sm">@Html.DisplayNameFor(model => model.MovieId) :</div>
                        <div class="mb-3 col-md-8 phenomena-sm">
                            @Html.ActionLink(Model.Movie.Name, "Details", "Movies", routeValues: new { id = Model.MovieId }, htmlAttributes: new { @class = "mt-3 text-link phenomena-sm ml-5" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3 phenomena-sm">@Html.DisplayNameFor(model => model.RoomId) :</div>
                        <div class="mb-3 col-md-8 phenomena-sm">
                            @Html.ActionLink(Model.Room.Name, "Details", "Rooms", routeValues: new { id = Model.RoomId }, htmlAttributes: new { @class = "mt-3 text-link phenomena-sm ml-5" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <input type="submit" value="Delete" class="btn btn-danger pl-5 pr-5 pt-2 pb-2 mt-3 ml-3 mr-4 phenomena-sm">
                </div>
                <div class="row">
                    @Html.ActionLink("Back to List", "Index", routeValues: null, htmlAttributes: new { @class = "mt-3 text-link phenomena-sm ml-5" })
                </div>
            </div>
        </div>
    </div>
  }